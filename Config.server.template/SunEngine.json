/**
 *   %app% - Application Root path. Set to auto to make auto search in parent 4 level.
 *   %wwwroot% - wwwroot path
 *   %config% - config dir path
 **/
{
  "Global": {
    "SiteUrl": "http://<domain>",
    "SiteApi": "http://<domain>",
    "UploadImagesUrl": "http://<domain>/UploadImages",
    "SkinsUrl": "http://<domain>/statics/Skins",
    "PartialSkinsUrl": "http://<domain>/statics/PartialSkins",
    "CustomCssUrl": "http://<domain>/statics/custom.css",
    "FileServer": true,
    "UpdateClientScriptsOnConfigChanges": true
  },
  "Dirs": {
    "ApplicationRoot": "auto",
    "WwwRoot": "%app%/wwwroot",
    "UploadImages": "%wwwroot%/UploadImages",
    "MailTemplates": "%config%/MailTemplates",
    "Skins": "%wwwroot%/statics/Skins",
    "PartialSkins": "%wwwroot%/statics/PartialSkins",
    "Resources": "%app%/Resources"
  },
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://localhost:<port>"
      }
    }
  }
}
